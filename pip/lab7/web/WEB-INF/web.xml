<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>lab7.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WebFormServlet</servlet-name>
        <servlet-class>lab7.WebFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>lab7.AreaCheckServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/lab7</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WebFormServlet</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
</web-app>
